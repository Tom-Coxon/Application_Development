<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SearchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:onClick="returnMain"
            app:srcCompat="@drawable/backbutton"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:layout_toLeftOf="@+id/titleBox"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="@color/darkGrey"
            android:textSize="18dp"
            android:text="Title: "/>

        <EditText
            android:id="@+id/titleBox"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/darkGrey"
            android:textColorHint="@color/darkGrey"
            android:background="@drawable/edittextstyle"/>

        <CheckBox
            android:id="@+id/checkBoxTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/titleBox"
            android:layout_marginLeft="40dp"
            android:background="@color/grey"
            android:onClick="checkTitle"/>

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="80dp"
            android:layout_toLeftOf="@+id/titleBox"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="@color/darkGrey"
            android:textSize="18dp"
            android:text="Location: "/>

        <EditText
            android:id="@+id/locationBox"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/darkGrey"
            android:textColorHint="@color/darkGrey"
            android:background="@drawable/edittextstyle"/>

        <CheckBox
            android:id="@+id/checkBoxLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@+id/titleBox"
            android:layout_marginLeft="40dp"
            android:background="@color/grey"
            android:textColorHighlight="@color/grey"
            android:onClick="checkLocation"/>

        <TextView
            android:id="@+id/textDay"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="120dp"
            android:layout_toLeftOf="@+id/titleBox"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="@color/darkGrey"
            android:textSize="18dp"
            android:text="Day: "/>

        <Spinner
            android:id="@+id/dropdownDay"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="120dp"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

        <CheckBox
            android:id="@+id/checkBoxDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_toRightOf="@+id/titleBox"
            android:layout_marginLeft="40dp"
            android:background="@color/grey"
            android:onClick="checkDay"/>

        <TextView
            android:id="@+id/textMonth"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="155dp"
            android:layout_toLeftOf="@+id/titleBox"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="@color/darkGrey"
            android:textSize="18dp"
            android:text="Month: "/>

        <Spinner
            android:id="@+id/dropdownMonth"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="155dp"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

        <CheckBox
            android:id="@+id/checkBoxMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="155dp"
            android:layout_toRightOf="@+id/titleBox"
            android:layout_marginLeft="40dp"
            android:background="@color/grey"
            android:onClick="checkMonth"/>

        <TextView
            android:id="@+id/textYear"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="190dp"
            android:layout_toLeftOf="@+id/titleBox"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="@color/darkGrey"
            android:textSize="18dp"
            android:text="Year: "/>

        <Spinner
            android:id="@+id/dropdownYear"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="190dp"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

        <CheckBox
            android:id="@+id/checkBoxYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:layout_toRightOf="@+id/titleBox"
            android:layout_marginLeft="40dp"
            android:background="@color/grey"
            android:onClick="checkYear"/>

        <TextView
            android:id="@+id/textStartTime"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="225dp"
            android:layout_toLeftOf="@+id/titleBox"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="@color/darkGrey"
            android:textSize="18dp"
            android:text="Start Time: "/>

        <Spinner
            android:id="@+id/dropdownStart"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="225dp"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

        <CheckBox
            android:id="@+id/checkBoxStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="225dp"
            android:layout_toRightOf="@+id/titleBox"
            android:layout_marginLeft="40dp"
            android:background="@color/grey"
            android:onClick="checkStart"/>

        <TextView
            android:id="@+id/textEndTime"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="260dp"
            android:layout_toLeftOf="@+id/titleBox"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:textColor="@color/darkGrey"
            android:textSize="18dp"
            android:text="End Time: "/>

        <Spinner
            android:id="@+id/dropdownEnd"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="260dp"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

        <CheckBox
            android:id="@+id/checkBoxEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:layout_toRightOf="@+id/titleBox"
            android:layout_marginLeft="40dp"
            android:background="@color/grey"
            android:onClick="checkEnd"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchEventButton"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/grey"
            android:clickable="true"
            android:onClick="searchAppointment"
            android:text="Search Event" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>